#format priority
--format "best[height>720]/bestvideo[height>720]+bestaudio/best/bestvideo+bestaudio"

#add file info
--write-description
--embed-thumbnail
--embed-subs
--add-metadata

#merge output to mp4
--merge-output-format mp4

#recode to mp4
--recode-video mp4

#output format
-o "%(title)s-%(id)s.%(ext)s"

