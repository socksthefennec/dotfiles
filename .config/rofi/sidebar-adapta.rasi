    background-color: @cyan;
}
inputbar {
    background-color: @lightblack;
    text-color: @lightgreen;
padding: @pwidth;
border: 0px 0px 0px 0px;
children: [ prompt, entry ];
}
prompt {
    background-color: @cyan;
    border-radius: @pwidth;
padding: @pwidth;
}
entry {
padding: @pwidth;
}
