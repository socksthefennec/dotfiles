* {
    //             Black
black:         #263238;
lightblack:    #37474F;
               //             Red
red:           #FF9800;
lightred:      #FFA74D;
               //             Green
green:         #8BC34A;
lightgreen:    #9CCC65;
               //             Yellow
yellow:        #FFC107;
lightyellow:   #FFA000;
               //             Blue
blue:          #03A9F4;
lightblue:     #81D4FA;
               //             Magenta
magenta:       #E91E63;
lightmagenta:  #AD1457;
               //             Cyan
cyan:          #009688;
lightcyan:     #26A69A;
               //             White
white:         #CFD8DC;
lightwhite:    #ECEFF1;
               background-color:  rgba(0,0,0,0);
               text-color: @lightwhite;
font: "sans 12";
pwidth: 0.5em;
}
window {
height:   100%;
width: 30em;
location: west;
anchor:   west;
          /* border:  0px 0px 0px 0px; */
          /*     text-color: @lightwhite; */
}
mode-switcher {
border: 0px 0px 0px 0px;
        background-color: @lightblack;
padding: @pwidth;
spacing: @pwidth;
}
button {
padding: @pwidth;
         border-radius: @pwidth;
}
button selected {
    /* border-color: @lightgreen; */
